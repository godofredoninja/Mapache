{{!-- Tag Cloud --}}
{{#get "tags" limit="10" include="count.posts" order="count.posts desc"}}
    <div class="sidebar-items">
        <h3 class="sidebar-title">Tags</h3>
            {{#foreach tags}}
                <a href="{{url absolute="true"}}" class="btn u-tags i-tag">{{name}}</a>
            {{/foreach}}
    </div>
{{/get}}
