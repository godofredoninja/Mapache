<article class="story-cover img-hover bg-dark relative min-h-14{{#if @first}} h-96 firts md:col-span-2 lg:h-full lg:col-span-3 lg:row-span-4{{else}} lg:col-span-2 lg:row-span-2 h-60{{/if}}">
    <div class="h-full relative overflow-hidden">
        {{#if feature_image}}
            <a href="{{url}}">
                <img class="story-cover-img image-inset absolute img-hover-here"
                    src="{{img_url feature_image size="m"}}"
                    srcset="{{img_url feature_image size="s"}} 300w, {{img_url feature_image size="m"}} 600w, {{img_url feature_image size="l"}} 1000w"
                    sizes="(max-width: 1000px) 400px, 700px"
                    alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
                />
                <span class="bg-cover-gradient absolute zindex2 inset-0 z-2"></span>
            </a>
        {{/if}}

        <header class="absolute z-3 bottom-0 p-4 lg:p-6">
            {{!-- Category and Datetime partials/components/primary-tag.hbs --}}
            {{> "components/primary-tag" class="text-white"}}

            <h2 class="leading-tight text-white text-2xl{{#if @first}} md:text-4xl lg:text-5xl{{else}} lg:text-3xl{{/if}}">
                <a class="block" href="{{url}}">{{title}}</a>
            </h2>
        </header>
    </div>
</article>