<aside class="sidebar col-right sidebar-sticky u-hide-before-md">
    {{#is "post"}}
        {{!-- show the last 5 articles on the post page --}}
        {{#get "posts" limit="5" as |sidebar_latest_post| }}
            {{#if sidebar_latest_post}}
                {{> "sidebar/sidebar-story" widgetTitle=(t "Latest Articles") widgetPosts=sidebar_latest_post}}
            {{/if}}
        {{/get}}
    {{else}}
        {{!-- show the featured 5 articles on the home page --}}
        {{#get "posts" filter="featured:true" limit="5" as |sidebar_featured_post|}}
            {{#if sidebar_featured_post}}
                {{> "sidebar/sidebar-story" widgetTitle=(t "Featured Posts") widgetPosts=sidebar_featured_post}}
            {{/if}}
        {{/get}}
    {{/is}}

    {{!-- Tags Cloud --}}
    {{> "sidebar/sidebar-tag-cloud"}}
</aside>
