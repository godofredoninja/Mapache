<main class="main bg-home">

  <section class="full-site-width">
    <div class="main-wrap main-wrap-home">
      {{#foreach posts}}
      <div class="ps">
        {{!-- Post Loop Content --}}
        <article class="ps-inner {{#if featured}}featured{{/if}}">
          {{!-- Tags --}}
          {{#if tags}}<div class="ps-tags show-on-small-screen">{{#foreach tags}}<a href="{{url}}" class="btn btn-flat" title={{name}}>{{name}}</a>{{/foreach}}</div>{{/if}}
          {{!-- post content --}}
          <div class="ps-content">
            {{!-- Add img Cover --}}
            {{#if image}}<span><a href="{{url}}" class="ps-thumb"><img src="{{image}}" alt="{{title}}"/></a></span>{{/if}}
            {{!-- post Title --}}
            <a class="ps-title" href="{{url}}"><h2>{{title}}</h2></a>
            {{!-- post author & datetime--}}
            <div class="ps-byline">
              <time class="timestamp" datetime="{{date format='YYYY-MM-DD'}}">{{date published_at timeago="true"}}</time>
              by {{#author}}<a href="{{url}}" title="{{name}}" class="author">{{name}}</a>{{/author}}
            </div>
            {{!-- Post excerpt --}}
            <p class="ps-excerpt show-on-small-screen">{{excerpt characters="260"}}... <a class="read-more" href="{{url}}">Read More</a></p>
            {{!-- Share Post --}}
            <aside class="share show-on-small-screen">
              <a class="btn btn-flat ps-comment" href="{{url absolute="true"}}#comments"><i class="fa fa-comments"></i><span class="ps-comment-count fb-comments-count" data-href="{{url absolute="true"}}"></span></a>
              <a class="btn btn-flat bg-facebook" href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;"><i class="fa fa-facebook"></i></a>
              <a class="btn btn-flat bg-twitter" href="https://twitter.com/share?text={{encode title}}&amp;url={{url absolute="true"}}"onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;"><i class="fa fa-twitter"></i></a>
              <a class="btn btn-flat bg-linkedin"  href="https://www.linkedin.com/shareArticle?mini=true&url={{url absolute="true"}}&title={{encode title}}" onclick="window.open(this.href, 'linkedin-share', 'width=600,height=494');return false;"><i class="fa fa-linkedin"></i></a>
            </aside>

          </div>
        </article>
      </div>
      {{/foreach}}
      {{! -- Add Pagination -- }}
      {{pagination}}
    </div>

    {{!-- Add Sidebar --}}
    {{> "sidebar"}}

  </section>

</main>
