<div class="row u-marginTop30 prev-next">
    {{!-- Prev Post --}}
    <div class="col s12 m6">
        {{#prev_post}}
        <a href="{{url}}" class="prev-next-link u-block u-marginBottom20">
            <span class="prev-next-span u-block"><i class="i-arrow-round-prev u-fontSizeLarge u-hide-before-md arrow-left"></i> {{t "Prev article"}}</span>
            <h5 class="prev-next-title u-fontWeightMedium">{{title}}</h5>
        </a>
        {{/prev_post}}
    </div>

    {{!-- Next Post --}}
    <div class="col s12 m6">
        {{#next_post}}
        <a href="{{url}}" class="prev-next-link u-block u-marginBottom20 prev-next-right">
            <span class="prev-next-span u-block">{{t "Next article"}} <i class="i-arrow-round-next u-fontSizeLarge arrow-right u-hide-before-md"></i></span>
            <h5 class="prev-next-title u-fontWeightMedium">{{title}}</h5>
        </a>
        {{/next_post}}
    </div>
</div>
